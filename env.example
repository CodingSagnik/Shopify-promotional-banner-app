# Shopify App Environment Variables
# Copy this file to .env and fill in your actual values

# Shopify API credentials (get these from your Shopify Partner Dashboard)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# App URL (update this when deploying to Vercel/Netlify)
SHOPIFY_APP_URL=https://your-app-url.vercel.app

# Development store URL (your development store for testing)
SHOPIFY_DEV_STORE_URL=your-dev-store.myshopify.com

# Node environment
NODE_ENV=development

# Port for local development
PORT=3000

# Session secret (generate a random string)
SESSION_SECRET=your_super_secret_session_key_here

# Database URL (optional, for production with persistent sessions)
# DATABASE_URL=your_database_url_here 